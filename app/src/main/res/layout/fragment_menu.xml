<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout_Base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#62152D"
                app:title="@string/activity_login_01"
                app:titleTextColor="#FFFFFF"></androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RelativeLayout_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout_01"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_margin="0dp"
                    android:backgroundTint="@color/Politecnico"
                    android:elevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/bottomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <!-- Text of cardview  -->

                        <ImageView
                            android:id="@+id/imageUser"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_promociondiadelpadre" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Promociones por día del padre"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:src="@drawable/ic_tarjetacredit_svg"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

                    <!-- Inicio de Cardviews redondas -->
            <LinearLayout
                android:id="@+id/LinearLayout_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/LinearLayout_01"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:paddingStart="80dp"
                android:paddingEnd="80dp">

                <TextView
                    android:id="@+id/TeVi_Datos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Lo más top!"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Politecnico"
                        android:elevation="8dp"
                        app:cardCornerRadius="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/card_round_background">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="8dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_aguacate"
                                android:paddingBottom="10dp"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!--             Segunda CardView              -->

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Politecnico"
                        android:elevation="8dp"
                        app:cardCornerRadius="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/card_round_background" >

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="8dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_ropa"
                                android:paddingBottom="10dp"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!--   Texto debajo de las primeras Cardviews redondas -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Frutas con hasta 30% de ahorro"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Outlet"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <!--        Segunda Fila cardviews redondas       -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:background="@drawable/card_round_background" >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Politecnico"
                        android:elevation="8dp"
                        app:cardCornerRadius="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="8dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_manzana"
                                android:paddingBottom="10dp"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!--       Cuarta Cardview redonda        -->

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Politecnico"
                        android:elevation="8dp"
                        app:cardCornerRadius="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/card_round_background" >

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="8dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_panaderia"
                                android:paddingBottom="10dp"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Texto debajo de segunda fila de CardViews -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Laptops con MSI"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="0dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Celulares con descuento"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <!--  Fin de texto debajo de la segunda fila de Cardviews  -->

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>